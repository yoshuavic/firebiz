<%= render 'shared/errors', obj: @register %>

<div class="row">
    <div class="col-sm-12 register">
        <%= form_with(model: register, local: true) do |form| %>
            <div class="form-group">
                <div class="col-sm-8">
                    <%= form.text_field :first_name, class:"form-control", placeholder: "First name" %>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-8">
                    <%= form.text_field :last_name, class:"form-control", placeholder: "Last name" %>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-8">
                      <label>Gender: </label>
                  <div class="form-check">
                        <%= form.label :gender, "Pria", :value => "L", class: "radio-inline"  %>
                        <%= form.radio_button :gender, "L", :checked => true %>
                        <%= form.label :gender, "Wanita", :value => "P", class: "radio-inline" %>
                        <%= form.radio_button :gender, "P" %>
                  </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-8">
                    <%= form.email_field :email, class:"form-control", placeholder:"Enter email" %>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-8">
                    <%= form.text_field :phone, class:"form-control", placeholder:"Enter phone number" %>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-8">
                    <label>Ukuran T-Shirt:</label>
                    <div class="form-check">
                        <%= form.label :shirt, "S", :value => "S", class: "radio-inline"  %>
                        <%= form.radio_button :shirt, "S", :checked => true %>
                        <%= form.label :shirt, "M", :value => "M", class: "radio-inline" %>
                        <%= form.radio_button :shirt, "M" %>
                        <%= form.label :shirt, "L", :value => "L", class: "radio-inline" %>
                        <%= form.radio_button :shirt, "L" %>
                        <%= form.label :shirt, "XL", :value => "XL", class: "radio-inline" %>
                        <%= form.radio_button :shirt, "XL" %>
                        <%= form.label :shirt, "XXL", :value => "XXL", class: "radio-inline" %>
                        <%= form.radio_button :shirt, "XXL" %>
                  </div>
                  <br>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10"> 
                    <%= form.submit "Register", class:'btn btn-primary btn-lg' %>
                </div>
            </div>
        <% end %>
    </div>
</div>
